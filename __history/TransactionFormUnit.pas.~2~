  end;

var
  frmTransaction: TfrmTransaction;

implementation

{$R *.dfm}

procedure TfrmTransaction.SetProductID(ProductID: Integer);
begin
  FProductID := ProductID;
  // use the FProductID to load the details of the selected product and display them in the form
end;

end.
