type
  TfrmTransaction = class(TForm)
    lblProduct: TLabel;
    getProductQuery: TADOQuery;
    cmType: TComboBox;
    Label1: TLabel;
    txtQuantity: TEdit;
    btnSave: TButton;
  private
    FDataModule: TMyDataModule;
    FProductID: Integer;
  public
    property DataModule: TMyDataModule read FDataModule write FDataModule;
