unit ProjectModulesUnit;

interface

uses
  System.SysUtils, System.Classes, Data.DB, Data.Win.ADODB;

type
  TMyDataModule = class(TDataModule)
    dbConnection: TADOConnection;
  private
    { Private declarations }
  public
    property ADOConnection: TADOConnection read dbConnection;
    procedure SetConnectionString(AConnectionString: string);
    procedure SetConnected(connected: Boolean);
  end;

var
  MyDataModule: TMyDataModule;

implementation

{%CLASSGROUP 'Vcl.Controls.TControl'}

{$R *.dfm}

procedure TMyDataModule.SetConnectionString(AConnectionString: string);
begin
  dbConnection.ConnectionString := AConnectionString;
end;

procedure TMyDataModule.SetConnected(connected: Boolean);
begin
  dbConnection.Connected := connected;
  dbConnection.Open;
end;

end.
